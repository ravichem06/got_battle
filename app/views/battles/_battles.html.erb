<p id="notice"><%= notice %></p>

<h1>Battles</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Battle number</th>
      <th>Attacker king</th>
      <th>Defender king</th>
      <th>Attacker 1</th>
      <th>Defender 1</th>
      <th>Battle outcome</th>
      <th>Battle type</th>
      <th>Major deaths</th>
      <th>Major capture</th>
      <th>Attacker size</th>
      <th>Defender size</th>
      <th>Attacker commander</th>
      <th>Defender commander</th>
      <th>Summer</th>
      <th>Location</th>
      <th>Region</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.name %></td>
        <td><%= battle.year %></td>
        <td><%= battle.battle_number %></td>
        <td><%= battle.attacker_king %></td>
        <td><%= battle.defender_king %></td>
        <td><%= battle.attacker_1 %></td>
        <td><%= battle.defender_1 %></td>
        <td><%= battle.battle_outcome %></td>
        <td><%= battle.battle_type %></td>
        <td><%= battle.major_deaths %></td>
        <td><%= battle.major_capture %></td>
        <td><%= battle.attacker_size %></td>
        <td><%= battle.defender_size %></td>
        <td><%= battle.attacker_commander %></td>
        <td><%= battle.defender_commander %></td>
        <td><%= battle.summer %></td>
        <td><%= battle.location %></td>
        <td><%= battle.region %></td>
        <td><%= battle.note %></td>
        <td><%= link_to 'Show', battle %></td>
        <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
        <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

